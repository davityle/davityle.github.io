            stripespath&lt;span style=&#34;color:#f92672&#34;&gt;.&lt;/span&gt;&lt;span style=&#34;color:#a6e22e&#34;&gt;lineTo&lt;/span&gt;&lt;span style=&#34;color:#f92672&#34;&gt;(&lt;/span&gt;xPos &lt;span style=&#34;color:#f92672&#34;&gt;+&lt;/span&gt; offset&lt;span style=&#34;color:#f92672&#34;&gt;,&lt;/span&gt; bottomy&lt;span style=&#34;color:#f92672&#34;&gt;);&lt;/span&gt;
