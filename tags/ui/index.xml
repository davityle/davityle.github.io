        &lt;span style=&#34;color:#66d9ef&#34;&gt;for&lt;/span&gt;&lt;span style=&#34;color:#f92672&#34;&gt;(&lt;/span&gt;&lt;span style=&#34;color:#66d9ef&#34;&gt;float&lt;/span&gt; xPos &lt;span style=&#34;color:#f92672&#34;&gt;=&lt;/span&gt; startx &lt;span style=&#34;color:#f92672&#34;&gt;-&lt;/span&gt; offset&lt;span style=&#34;color:#f92672&#34;&gt;;&lt;/span&gt; xPos &lt;span style=&#34;color:#f92672&#34;&gt;&amp;lt;=&lt;/span&gt; endx&lt;span style=&#34;color:#f92672&#34;&gt;;&lt;/span&gt; xPos &lt;span style=&#34;color:#f92672&#34;&gt;+=&lt;/span&gt; offset &lt;span style=&#34;color:#f92672&#34;&gt;+&lt;/span&gt; width&lt;span style=&#34;color:#f92672&#34;&gt;){&lt;/span&gt;
            stripespath&lt;span style=&#34;color:#f92672&#34;&gt;.&lt;/span&gt;&lt;span style=&#34;color:#a6e22e&#34;&gt;moveTo&lt;/span&gt;&lt;span style=&#34;color:#f92672&#34;&gt;(&lt;/span&gt;xPos&lt;span style=&#34;color:#f92672&#34;&gt;,&lt;/span&gt; topy&lt;span style=&#34;color:#f92672&#34;&gt;);&lt;/span&gt;
